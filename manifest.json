{
    "manifest_version": 3,
    "name": "Minha Extensão",
    "version": "1.0",
    "description": "Uma extensão para executar meu script.",
    "permissions": ["storage"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    }
  }
  